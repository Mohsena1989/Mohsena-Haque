
*{margin:0; padding:0;}

body{font-family:sans-sarif;}

header{padding-top:15px; margin-top:0px; padding-bottom:5px; width:100%; position:fixed; background:#001c20; z-index:99;}

nav ul{list-style:none;}

nav ul li{float:left; margin:auto 5px; }

nav ul li a{float:left; text-transform:uppercase; text-decoration:none; padding:10px 0px 10px 10px; color:white; font-size:.95rem;}

nav ul li a:hover{background:#c51cc5; border-radius:8px; color:white;}

h1{color:black; font-size:2.25rem; text-align:center; text-transform:uppercase;}

h6{color:white; font-size:1.15rem; font-width:500; text-align:center;}

P{color:white; line-height:1.6; font-size:.95rem; text-align:center;}

section{ }

#service .content{background:#ffffff47; width:30%; height:200px; float:left; border-radius:10px; margin-right:5px; margin-bottom:5px; padding:50px; }

#service .content:hover{background:blue;}

#home{ background-repeat:no-repeat; background-size:cover;text-align:center; margin-top:20px; height:500px;}

.container{width:1100px; text-align:center; margin:auto; overflow:hidden; background-repeat:no-repeat; background-size:cover;}

.col-50{width:50%; float:left; text-align:center;}

.col-33{width:33%; float:left; text-align:center;padding-top:20px;}

.col-25{width:25%; float:left; text-align:center;}

.i{font-size:2rem;  color:yellow;}

.btn{padding:8px 20px; background:#4c97fb; border:0px; border-radius:15px; font-size:.90rem;text-transform:uppercase;}

/* -- project part --*/

#project img{height:300px; width:80%; border-radius:5px;}

#project .content{position:relative;}

#project .overlay{position:absolute; width:80%; left:33px; right:10px; padding:15px 5px; color:white; text-transform:uppercase; bottom:10px; background:black; display:none;}

#project .content:hover .overlay{display:block;}

.footer{}

.footer nav ul li a i{font-size:.5rem;text-decoration:none;color:#484848;}




