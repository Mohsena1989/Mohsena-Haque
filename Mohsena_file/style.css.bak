 
 
 
             *{
				margin:0; 
				padding:0;
				}
				.container{
				width:1170px; 
				margin:auto; 
				border:1px solid red; 
				overflow:hidden;
				}
				.col-50{
				width:50%; 
				float:left;
				}
				.col-33{
				width:33.33%;
				float:left;
				}
				.col-25{
				width:25%; 
				float:left;
				}
				section{
				padding-top:100px; 
				padding-bottom:75px;
				}
				.text-center{text-align:center;}
				.section-title{
				color:blue; 
				text-transform:uppercase;
				letter-spacing:.15rem;
				}
				
				/* project section */
				#projectwork{
					margin-top:2.50rem
				}
				
				#projectwork img{hight:400px; 
				width:99%;
				}
				#projectwork .card-overlay{
					position:absolute;
				top:auto;
				bottom:0;
				left:0;
				right:0;
				visibility:hidden;
				opacity:0;
				transition:all 1s;
			    }
				#projectwork col-33:hover .card-overlay{
					visibility:visible;
					opacity:1;
				}
				
				#projectwork a{
				padding:.75rem 1rem;
				background-color:black;
				color:white;
				font-size:1.2rem;
				text-transform:uppercase;
				display:block;
				margin:.3rem 1rem;
				text-decoration:none;
				letter-spacing:.7rem;
				border-radius:5px;
				}